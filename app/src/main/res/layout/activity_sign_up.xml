<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup.SignUpActivity">

    <ImageView
        android:id="@+id/topwave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/top_wave_login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="285dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/sign_in"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edt_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/background_oauth"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="8dp"
        android:hint="Name"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColorHint="#CBD4D8"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.222" />

    <EditText
                android:id="@+id/edt_input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/background_oauth"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="8dp"
                android:fontFamily="@font/inter_medium"
                android:hint="Email"
                android:textSize="12sp"
                android:inputType="text"
                android:padding="12dp"
                android:textColorHint="#CBD4D8"
                app:layout_constraintTop_toBottomOf="@+id/edt_input_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/edt_input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:textColorHint="#CBD4D8"
                android:background="@drawable/background_oauth"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="8dp"
                android:textSize="12sp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_input_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/edt_input_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:textColorHint="#CBD4D8"
                android:background="@drawable/background_oauth"
                android:drawablePadding="8dp"
                android:textSize="12sp"
                android:hint="Height"
                android:inputType="textPassword"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_input_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/edt_input_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/background_oauth"
                android:drawablePadding="8dp"
                android:fontFamily="@font/inter_medium"
                android:hint="Weight"
                android:textSize="12sp"
                android:inputType="text"
                android:padding="12dp"
                android:textColorHint="#CBD4D8"
                app:layout_constraintTop_toBottomOf="@+id/edt_input_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/edt_input_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/background_oauth"
                android:drawablePadding="8dp"
                android:fontFamily="@font/inter_medium"
                android:hint="Age"
                android:textSize="12sp"
                android:inputType="text"
                android:padding="12dp"
                android:textColorHint="#CBD4D8"
                app:layout_constraintTop_toBottomOf="@+id/edt_input_weight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="321dp"
                android:layout_height="49dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_corner_radius"
                android:backgroundTint="@color/button_blue"
                android:padding="5dp"
                android:text="@string/sign_up"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/edt_input_age"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/bottomwave"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_wave_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>