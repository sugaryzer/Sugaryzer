<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_auth"
    tools:context=".ui.signup.SignUpActivity">

    <ImageView
        android:id="@+id/topwave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/top_wave"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/sign_up"
        android:textColor="#000000"
        android:textSize="24sp"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toBottomOf="@+id/topwave"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edt_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_oauth"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="8dp"
        android:hint="Name"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColorHint="#CBD4D8"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/signUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edt_input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/background_oauth"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="8dp"
        android:fontFamily="@font/inter_medium"
        android:hint="Email"
        android:textSize="12sp"
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="#CBD4D8"
        app:layout_constraintTop_toBottomOf="@+id/edt_input_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edt_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:textColorHint="#CBD4D8"
        android:background="@drawable/background_oauth"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="8dp"
        android:textSize="12sp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_input_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edt_input_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:textColorHint="#CBD4D8"
        android:background="@drawable/background_oauth"
        android:drawablePadding="8dp"
        android:textSize="12sp"
        android:hint="Height"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_input_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edt_input_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/background_oauth"
        android:drawablePadding="8dp"
        android:fontFamily="@font/inter_medium"
        android:hint="Weight"
        android:textSize="12sp"
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="#CBD4D8"
        app:layout_constraintTop_toBottomOf="@+id/edt_input_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edt_input_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/background_oauth"
        android:drawablePadding="8dp"
        android:fontFamily="@font/inter_medium"
        android:hint="Age"
        android:textSize="12sp"
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="#CBD4D8"
        app:layout_constraintTop_toBottomOf="@+id/edt_input_weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/btn_activity_main"
        android:text="@string/sign_up"
        android:textColor="@android:color/white"
        app:backgroundTint="@null"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/edt_input_age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/btn_activity_second"
        android:text="@string/sign_in"
        android:textColor="@android:color/black"
        app:backgroundTint="@null"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/btnSignUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/bottomwave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_wave"
        app:layout_constraintTop_toBottomOf="@id/signIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>